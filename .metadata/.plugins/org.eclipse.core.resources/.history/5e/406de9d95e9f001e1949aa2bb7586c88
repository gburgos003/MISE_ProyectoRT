/* USER CODE BEGIN 0 */

uint16_t bufferAdc[1024];
uint8_t buffer_commands[2];

int uart_time = 20;
int n_samples = 100;
int sample_time = 25;

typedef enum {
	SET_UART_TIME = 0,
	SET_SAMPLE_TIME,
} command_id;

typedef struct command {
	command_id type;
	uint8_t arg;
} command;

